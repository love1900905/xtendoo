<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_social_firebase_global_settings" model="ir.actions.act_window">
        <field name="name">action.social.firebase.global.settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'social'}</field>
    </record>

    <record id="menu_social_firebase_global_settings" model="ir.ui.menu">
        <field name="action" ref="action_social_firebase_global_settings" />
    </record>

    <record id="res_config_firebase_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.social.firebase</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block social_settings_block" data-string="Social Media" string="Social Media" data-key="social_firebase" groups="social_firebase.group_social_manager">
                    <h2>Web Push Notifications (Social)</h2>
                     <div class="text-muted" style="margin-left:20px;">
                         You must go to website config
                     </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
