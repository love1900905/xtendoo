<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        inherit_id="website_sale.products_categories"
        id="show_recommendations_products"
        name="Show Recommendations Products"
    >

        <xpath expr="//div[hasclass('collapse')]/ul/li[1]" position="replace">
            <li class="nav-item">
                <br/>
<!--                <a t-att-href="keep('/shop', category=0)" t-attf-class="nav-link o_not_editable"></a>-->
            </li>
        </xpath>

        <xpath expr="//li[hasclass('nav-item')]" position="before">
            <li class="nav-item">
                <a t-att-href="keep('/shop/recommendations/', recommendations=True, category=0)"
                   t-attf-class="nav-link #{'' if category else 'active'} o_not_editable">
                    My Products
                </a>
            </li>
        </xpath>

    </template>

</odoo>
