<?xml version="1.0" ?>
<odoo>

    <template id="report_delivery_document" inherit_id="stock.report_delivery_document" priority="9999">
        <xpath expr="//div[@name='div_sched_date']" position="after">
            <th name="td_responsible_h">
                <strong>Responsible</strong>
            </th>
        </xpath>
        <xpath expr="//div[@name='div_sched_date']" position="after">
            <td name="td_responsible">
                <span t-field="o.user_id"/>
            </td>
        </xpath>
        <xpath expr="//table[@name='stock_move_line_table']" position="after">
            <p>
                <span t-if="o.customer_signature">
                    <strong>Customer acceptance:</strong>
                    <img class="image" t-att-src="'data:image/png;base64,%s' % o.customer_signature"
                         style="border:auto;"/>
                </span>
            </p>
        </xpath>
    </template>

</odoo>
