<odoo>
    <record id="sale_order_status_form_view" model="ir.ui.view">
        <field name="name">sale.order.status.form.view</field>
        <field name="model">sale.order.status</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sale_order_status_tree_view" model="ir.ui.view">
        <field name="name">sale.order.status.tree.view</field>
        <field name="model">sale.order.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="sale_order_status_search_view" model="ir.ui.view">
        <field name="name">sale.order.status.search.view</field>
        <field name="model">sale.order.status</field>
        <field name="arch" type="xml">
            <search string="Status">
                <field name="name" />
            </search>
        </field>
    </record>
    <record id="sale_order_status_action" model="ir.actions.act_window">
        <field name="name">Sales Order Status</field>
        <field name="res_model">sale.order.status</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="sale_order_status_tree_view" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to set a new status for sale order.
            </p>
        </field>
    </record>
    <record id="sale_order_status_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_order_status_form_view" />
        <field name="act_window_id" ref="sale_order_status_action" />
    </record>
    <record id="sale_order_status_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale_order_status_tree_view" />
        <field name="act_window_id" ref="sale_order_status_action" />
    </record>
    <menuitem
        id="sale_order_status_menu"
        parent="sale.menu_sales_config"
        action="sale_order_status_action"
        sequence="20"
    />
</odoo>
