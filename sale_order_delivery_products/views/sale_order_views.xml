<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.delivery_product</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='action_quotation_send']"
                position="after"
            >
                <button string="Entregar Productos" type="object" name="action_view_picking" class="btn-primary" attrs="{'invisible':[('state','!=','sale')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
